@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!-- Main container for the home page content -->
<div class="container mt-5">
    <!-- Page header -->
    <div class="text-center">
        <h1 class="display-4">Subnet Suite</h1>
        <p class="lead">The ultimate tool for all your subnetting needs.</p>
    </div>

    <!-- Feature cards row -->
    <div class="row mt-5 text-center">
        <!-- Subnet Calculator card -->
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Subnet Calculator</h5>
                    <p class="card-text">
                        Calculate network information for an IP address and subnet mask.
                    </p>
                    <a href="/IPSubnet" class="btn btn-primary">Launch</a>
                </div>
            </div>
        </div>

        <!-- VLSM Calculator card -->
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">VLSM Calculator</h5>
                    <p class="card-text">
                        Perform Variable Length Subnet Masking for efficient subnet allocation.
                    </p>
                    <a href="/VLSM" class="btn btn-primary">Launch</a>
                </div>
            </div>
        </div>

        <!-- Supernetting Tool card -->
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Supernetting Tool</h5>
                    <p class="card-text">
                        Combine multiple subnets into a larger network.
                    </p>
                    <a href="/supernetting" class="btn btn-primary">Launch</a>
                </div>
            </div>
        </div>

        <!-- Binary/Hex/Decimal Converter card -->
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Binary, Hex, and Decimal Converter</h5>
                    <p class="card-text">
                        Convert Binary, Hexadecimal, and Decimal numbers.
                    </p>
                    <a href="/converter" class="btn btn-primary">Launch</a>
                </div>
            </div>
        </div>

        <!-- Visual Network Tool card -->
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Visual Network Tool</h5>
                    <p class="card-text">
                        Create graphical representations of your subnetted networks.
                    </p>
                    <a href="/Visualizer" class="btn btn-primary">Launch</a>
                </div>
            </div>
        </div>

        <!-- IPv6 Subnetting card -->
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">IPv6 Subnetting</h5>
                    <p class="card-text">
                        Calculate network information based on IPv6 addresses and subnet masks.
                    </p>
                    <a href="/IPv6" class="btn btn-primary">Launch</a>
                </div>
            </div>
        </div>

        <!-- Binary Calculator card -->
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Binary Calculator</h5>
                    <p class="card-text">
                        Add and subtract binary.
                    </p>
                    <a href="/BinaryCalc" class="btn btn-primary">Launch</a>
                </div>
            </div>
        </div>

        <!-- ACL Generator card -->
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">ACL Generator</h5>
                    <p class="card-text">
                        Generate Cisco and Juniper ACLs.
                    </p>
                    <a href="/ACLGenerator" class="btn btn-primary">Launch</a>
                </div>
            </div>
        </div>

        <!-- Route Generator card -->
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Route Generator</h5>
                    <p class="card-text">
                        Generate Cisco and Juniper routing configurations.
                    </p>
                    <a href="/RouteGenerator" class="btn btn-primary">Launch</a>
                </div>
            </div>
        </div>

        <!-- Mac Address Vendor Lookup card -->
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">MAC Vendor Lookup</h5>
                    <p class="card-text">
                        Identify the manufacturer of a network device by MAC address.
                    </p>
                    <a href="/MacLookup" class="btn btn-primary">Launch</a>
                </div>
            </div>
        </div>

        <!-- Ping / Traceroute card -->
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Ping / Traceroute</h5>
                    <p class="card-text">
                        Check connectivity and trace the path to a remote host.
                    </p>
                    <a href="/PingTraceroute" class="btn btn-primary">Launch</a>
                </div>
            </div>
        </div>

        <!-- Public IP & Privacy Check card -->
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Public IP & Privacy Check</h5>
                    <p class="card-text">
                        View your public IP, ISP, and check for WebRTC leaks.
                    </p>
                    <a href="/PublicIP" class="btn btn-primary">Launch</a>
                </div>
            </div>
        </div>
    </div>
</div>

